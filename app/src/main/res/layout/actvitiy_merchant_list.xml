                            <TextView style="@style/MerchantItemText2"
                                android:text="年成单：1300单" />
                            <TextView style="@style/MerchantItemText3"
                                android:text="月成单：105单"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView style="@style/MerchantItemText3"
                                    android:text="评价：93.2分"/>
                                <TextView style="@style/MerchantItemText4"
                                    android:text="比同行高1.6分"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView style="@style/MerchantItemPlace"
                            android:id="@+id/tv_place_4"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    tools:visibility="gone"
                    style="@style/MerchantItemContainer">
                    <ImageView style="@style/MerchantItemImg"
                        android:src="@drawable/merchant_img_5"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout style="@style/MerchantItemTextContainer">
                            <TextView style="@style/MerchantItemText1"
                                android:text="中大：大华花边" />
                            <TextView style="@style/MerchantItemText2"
                                android:text="年成单：1254单" />
                            <TextView style="@style/MerchantItemText3"
                                android:text="月成单：96单"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView style="@style/MerchantItemText3"
                                    android:text="评价：93.2分"/>
                                <TextView style="@style/MerchantItemText4"
                                    android:text="比同行高1.6分"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView style="@style/MerchantItemPlace"
                            android:id="@+id/tv_place_5"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/MerchantItemContainer">
                    <ImageView style="@style/MerchantItemImg"
                        android:src="@drawable/merchant_img_6"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout style="@style/MerchantItemTextContainer">
                            <TextView style="@style/MerchantItemText1"
                                android:text="中大：洪雅花边" />
