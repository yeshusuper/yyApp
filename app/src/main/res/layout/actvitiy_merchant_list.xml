                    <ImageView style="@style/MerchantItemImg"
                        android:src="@drawable/merchant_img_4"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout style="@style/MerchantItemTextContainer">
                            <TextView style="@style/MerchantItemText1"
