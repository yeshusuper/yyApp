<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_f2f2f2">
    <com.fuliaohui.yy.widget.TitleBar
        android:id="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView style="@style/LineX_b2b2b2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_pub"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/red_e82c1d"
            android:text="发布采购(30分钟内响应)"
            android:textSize="@dimen/font_45"
            android:textColor="@color/white_ffffff"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/ll_select_btn"
            android:background="@color/white_ffffff"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_555555"
                android:textSize="@dimen/font_45"
                android:text="排序方式"
                />
            <ImageView style="@style/IconSelect" />
        </LinearLayout>

        <TextView android:id="@+id/tv_select_bottom_line"
                  android:layout_below="@id/ll_select_btn"
                  style="@style/LineX_b2b2b2" />

        <ScrollView
            android:layout_below="@id/tv_select_bottom_line"
            android:layout_above="@id/btn_pub"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    tools:visibility="gone"
                    style="@style/MerchantItemContainer">
                    <ImageView style="@style/MerchantItemImg"
                               android:src="@drawable/merchant_img_1"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout style="@style/MerchantItemTextContainer">
                            <TextView style="@style/MerchantItemText1"
                                      android:text="中大：炳和生绣品" />
                            <TextView style="@style/MerchantItemText2"
                                      android:text="年成单：1826单" />
                            <TextView style="@style/MerchantItemText3"
                                      android:text="月成单：112单"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView style="@style/MerchantItemText3"
                                          android:text="评价：96.7分"/>
                                <TextView style="@style/MerchantItemText4"
                                          android:text="比同行高5.1分"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView style="@style/MerchantItemPlace"
                                  android:id="@+id/tv_place_1"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    tools:visibility="gone"
                    style="@style/MerchantItemContainer">
                    <ImageView style="@style/MerchantItemImg"
                               android:src="@drawable/merchant_img_2"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout style="@style/MerchantItemTextContainer">
                            <TextView style="@style/MerchantItemText1"
                                      android:text="中大：通成绣品" />
                            <TextView style="@style/MerchantItemText2"
                                      android:text="年成单：1562单" />
                            <TextView style="@style/MerchantItemText3"
                                      android:text="月成单：183单"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView style="@style/MerchantItemText3"
                                          android:text="评价：94.3分"/>
                                <TextView style="@style/MerchantItemText4"
                                          android:text="比同行高2.7分"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView style="@style/MerchantItemPlace"
                                  android:id="@+id/tv_place_2"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    tools:visibility="gone"
                    style="@style/MerchantItemContainer">
                    <ImageView style="@style/MerchantItemImg"
                               android:src="@drawable/merchant_img_3"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout style="@style/MerchantItemTextContainer">
                            <TextView style="@style/MerchantItemText1"
                                      android:text="中大：丽新花边" />
                            <TextView style="@style/MerchantItemText2"
                                      android:text="年成单：1436单" />
                            <TextView style="@style/MerchantItemText3"
                                      android:text="月成单：125单"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView style="@style/MerchantItemText3"
                                          android:text="评价：94.0分"/>
                                <TextView style="@style/MerchantItemText4"
                                          android:text="比同行高2.4分"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView style="@style/MerchantItemPlace"
                                  android:id="@+id/tv_place_3"/>
