<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2f2f2">

    <com.fuliaohui.yy.widget.TitleBar
        android:id="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView style="@style/LineX_b2b2b2"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout style="@style/InputSelectContainer"
        android:layout_height="88dp"
        android:layout_marginBottom="10dp">
        <TextView style="@style/LineX_dddddd"/>
        <TextView style="@style/InputSelect"
            android:textSize="@dimen/font_45"
            android:text="用户头像" />
        <ImageView
            android:id="@+id/iv_face_update_icon"
            style="@style/InputSelectIcon" />
        <ImageView
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/iv_face_update_icon"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_1"
            android:layout_width="67dp"
            android:layout_height="67dp" />
        <TextView style="@style/InputSelectLine" />
    </RelativeLayout>

    <RelativeLayout style="@style/InputSelectContainer"
        android:layout_height="55dp">
        <TextView style="@style/LineX_dddddd"/>
        <TextView style="@style/InputSelect"
            android:textSize="@dimen/font_45"
            android:text="用户名" />
        <ImageView
            android:id="@+id/iv_name_update_icon"
            style="@style/InputSelectIcon" />
        <TextView
            android:textSize="@dimen/font_36"
            android:layout_toLeftOf="@id/iv_name_update_icon"
            android:layout_marginRight="20dp"
            android:text="小明"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView style="@style/InputSelectLine" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView style="@style/LineX_b2b2b2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textSize="@dimen/font_45"
                android:textColor="@color/red_e82c1d"
                android:gravity="center"
                android:background="@color/white_ffffff"
                android:text="退出"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>