<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2f2f2">

    <com.fuliaohui.yy.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView style="@style/LineX_b2b2b2"
        android:layout_marginBottom="10dp"/>

    <TextView style="@style/LineX_b2b2b2"/>

    <LinearLayout
        android:background="@color/white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/font_45"
                android:textColor="@color/black_555555"
                android:text="质量："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_1" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_2" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_3" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_4" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_5" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/font_45"
                android:textColor="@color/black_555555"
                android:text="态度："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_6" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_7" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_8" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_9" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_10" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/font_45"
                android:textColor="@color/black_555555"
                android:text="符合描述："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_11" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_12" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_13" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_14" />
            <ImageView style="@style/Star" android:id="@+id/iv_star_15" />
        </LinearLayout>
        <EditText
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_pub_product_img_border"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="left|top"
            android:textSize="@dimen/font_39"
            android:textColor="@color/gray_999999"
            android:padding="10dp"
            android:hint="评语"/>
    </LinearLayout>
    <TextView style="@style/LineX_b2b2b2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_pub"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/red_e82c1d"
            android:text="提交"
            android:textSize="@dimen/font_45"
            android:textColor="@color/white_ffffff"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>