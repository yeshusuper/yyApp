<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rl_pay_container"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/tv_close"
                android:gravity="center"
                android:textSize="@dimen/font_39"
                android:text="X"
                android:layout_width="33dp"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:textSize="@dimen/font_48"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="选择支付方式"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/iv_wx_pay_container"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <ImageView
                android:id="@+id/iv_wx_pay"
                android:layout_centerVertical="true"
                android:src="@drawable/wx_pay"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_alignTop="@id/iv_wx_pay"
                android:layout_toRightOf="@id/iv_wx_pay"
                android:textSize="@dimen/font_33"
                android:text="微信支付"
                android:textColor="@color/black_555555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignBottom="@id/iv_wx_pay"
                android:layout_toRightOf="@id/iv_wx_pay"
                android:textSize="@dimen/font_27"
                android:textColor="@color/gray_999999"
                android:text="微信安全支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_wx_pay_check"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_check_bor_nor"/>
        </RelativeLayout>
        <TextView style="@style/LineX_b2b2b2" />
        <RelativeLayout
            android:id="@+id/iv_ali_pay_container"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <ImageView
                android:id="@+id/iv_ali_pay"
                android:layout_centerVertical="true"
                android:src="@drawable/ali_pay"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_alignTop="@id/iv_ali_pay"
                android:layout_toRightOf="@id/iv_ali_pay"
                android:textSize="@dimen/font_33"
                android:text="微信支付"
                android:textColor="@color/black_555555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignBottom="@id/iv_ali_pay"
                android:layout_toRightOf="@id/iv_ali_pay"
                android:textSize="@dimen/font_27"
                android:textColor="@color/gray_999999"
                android:text="微信安全支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_ali_pay_check"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_check_bor_nor"/>
        </RelativeLayout>
        <TextView style="@style/LineX_b2b2b2" />
        <Button
            android:layout_marginTop="100dp"
            android:id="@+id/btn_pub"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/red_e82c1d"
            android:text="确定付款"
            android:textSize="@dimen/font_45"
            android:textColor="@color/white_ffffff"
            android:gravity="center"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_bg"
        android:layout_alignParentTop="true"
        android:layout_above="@id/rl_pay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent60">

    </FrameLayout>
</RelativeLayout>