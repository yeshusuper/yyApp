<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_f2f2f2">
    <com.fuliaohui.yy.widget.TitleBar
        android:id="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView style="@style/LineX_b2b2b2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_select_btn"
            android:background="@color/white_ffffff"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_555555"
                android:textSize="@dimen/font_45"
                android:text="排序方式"
                />
            <ImageView style="@style/IconSelect" />
        </LinearLayout>

        <TextView android:id="@+id/tv_select_bottom_line"
                  android:layout_below="@id/ll_select_btn"
                  style="@style/LineX_b2b2b2" />

        <ScrollView
            android:layout_below="@id/tv_select_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_detail_1"
                    style="@style/MerchantItemContainer">
                    <ImageView style="@style/MerchantItemImg"
                               android:src="@drawable/new_product_img_1"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout style="@style/MerchantItemTextContainer">
                            <TextView style="@style/MerchantItemText1"
                                      android:text="壹衣辅料大卖场" />
                            <TextView style="@style/MerchantItemText2"
                                      android:text="年成单：1826单" />
                            <TextView style="@style/MerchantItemText3"
                                      android:text="月成单：112单"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView style="@style/MerchantItemText3"
                                          android:text="报价时间：2/25 16:30"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView style="@style/MerchantTenderItemText4"
                                  android:text="96.7分"/>
                        <TextView style="@style/MerchantTenderItemDetail"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_detail_2"
                    style="@style/MerchantItemContainer">
                    <ImageView style="@style/MerchantItemImg"
                               android:src="@drawable/new_product_img_1"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout style="@style/MerchantItemTextContainer">
                            <TextView style="@style/MerchantItemText1"
                                      android:text="壹衣辅料大卖场" />
                            <TextView style="@style/MerchantItemText2"
                                      android:text="年成单：1826单" />
                            <TextView style="@style/MerchantItemText3"
                                      android:text="月成单：112单"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView style="@style/MerchantItemText3"
                                          android:text="报价时间：2/25 16:30"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView style="@style/MerchantTenderItemText4"
                                  android:text="96.7分"/>
                        <TextView style="@style/MerchantTenderItemDetail"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_detail_3"
                    style="@style/MerchantItemContainer">
                    <ImageView style="@style/MerchantItemImg"
                               android:src="@drawable/new_product_img_1"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout style="@style/MerchantItemTextContainer">
                            <TextView style="@style/MerchantItemText1"
                                      android:text="壹衣辅料大卖场" />
                            <TextView style="@style/MerchantItemText2"
                                      android:text="年成单：1826单" />
                            <TextView style="@style/MerchantItemText3"
                                      android:text="月成单：112单"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView style="@style/MerchantItemText3"
                                          android:text="报价时间：2/25 16:30"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView style="@style/MerchantTenderItemText4"
                                  android:text="96.7分"/>
                        <TextView style="@style/MerchantTenderItemDetail"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_detail_4"
                    style="@style/MerchantItemContainer">
                    <ImageView style="@style/MerchantItemImg"
                               android:src="@drawable/new_product_img_1"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout style="@style/MerchantItemTextContainer">
                            <TextView style="@style/MerchantItemText1"
                                      android:text="壹衣辅料大卖场" />
                            <TextView style="@style/MerchantItemText2"
                                      android:text="年成单：1826单" />
                            <TextView style="@style/MerchantItemText3"
                                      android:text="月成单：112单"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView style="@style/MerchantItemText3"
                                          android:text="报价时间：2/25 16:30"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView style="@style/MerchantTenderItemText4"
                                  android:text="96.7分"/>
                        <TextView style="@style/MerchantTenderItemDetail"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/ll_select_items"
            android:layout_below="@id/tv_select_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent60"
            android:clickable="true"
            android:visibility="gone">
            <LinearLayout
                android:background="@color/white_ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView style="@style/DropSelectItem" android:text="按评价排序"/>
                <TextView style="@style/LineX_b2b2b2" />
                <TextView style="@style/DropSelectItem" android:text="按年成单量排序"/>
                <TextView style="@style/LineX_b2b2b2" />
                <TextView style="@style/DropSelectItem" android:text="按月成单量排序"/>
                <TextView style="@style/LineX_b2b2b2" />
                <TextView style="@style/DropSelectItem" android:text="按默认推荐排序"/>
                <TextView style="@style/LineX_b2b2b2" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>